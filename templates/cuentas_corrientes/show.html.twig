{% extends 'disenio.html.twig' %}

{% block title %}Cuentas Corrientes{% endblock %}

{% block contenido %}
    <h1>CuentasCorrientes</h1>

    <dvi class="row">
        <div class="col-md-6">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Nombre</h3>
                </div>
                <div class="box-body">{{ cuentas_corriente.nombre }}</div>
            </div>
        </div>
    </dvi>

    <dvi class="row">
        <div class="col-md-6">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Apellido</h3>
                </div>
                <div class="box-body">{{ cuentas_corriente.apellido }}</div>
            </div>
        </div>
    </dvi>

    <dvi class="row">
        <div class="col-md-6">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">DNI</h3>
                </div>
                <div class="box-body">{{ cuentas_corriente.dni }}</div>
            </div>
        </div>
    </dvi>

    <dvi class="row">
        <div class="col-md-6">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Teléfono</h3>
                </div>
                <div class="box-body">{{ cuentas_corriente.tel }}</div>
            </div>
        </div>
    </dvi>

    <dvi class="row">
        <div class="col-md-6">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Dirección</h3>
                </div>
                <div class="box-body">{{ cuentas_corriente.direccion }}</div>
            </div>
        </div>
    </dvi>

    <div class="row">
        <div class="col-md-6" style="margin-left: 20px;">
            <a class="btn btn-bitbucket BTNa BTNmd" href="{{ path('cuentas_corrientes_index') }}">Volver</a>

            <a class="btn btn-bitbucket BTNa BTNmd" href="{{ path('cuentas_corrientes_edit', {'id': cuentas_corriente.id}) }}">Editar</a>

            <div style="float: right; margin:-5px 20px 0px 0px;">{{ include('cuentas_corrientes/_delete_form.html.twig') }}</div>
        </div>
    </div>

{% endblock %}
